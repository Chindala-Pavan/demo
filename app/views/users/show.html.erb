
<% #if @user.avatar.variable?%>
    <%#=#image_tag @user.avatar.variant(resize: '400x400')%>
    <div>
    <%#= #link_to image_tag(@user.avatar.variant(resize: '400x400')),@user.avatar%>

    <div>
    <%#= #link_to image_tag(@user.avatar.variant(resize: '400x400')),rails_blob_path(@user.avatar,disposition: :attachment)%>
